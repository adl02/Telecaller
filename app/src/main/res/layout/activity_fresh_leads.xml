<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".FreshLeads">

    <!-- Main ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_background"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <!-- Top Bar with Title and Icons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="24dp"
                    android:paddingBottom="16dp">

                    <!-- Title Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="Fresh Leads"
                            android:textColor="#1E293B"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Manage your daily targets"
                            android:textColor="#64748B"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Icons Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp">

                        <!-- Notification Icon -->
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp">

                            <!-- Red Dot -->
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_alignTop="@+id/notificationIcon"
                                android:layout_alignRight="@+id/notificationIcon"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/notification_badge" />

                            <ImageView
                                android:id="@+id/notificationIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_notifications"
                                app:tint="#64748B" />
                        </RelativeLayout>

                        <!-- Profile Avatar -->
                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/profile_background"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="AM"
                            android:textColor="#64748B"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Search Bar -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingBottom="16dp">

                    <!-- Search Icon -->
                    <ImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_search"
                        app:tint="#94A3B8" />

                    <!-- Search Input -->
                    <EditText
                        android:id="@+id/searchInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/search_background"
                        android:fontFamily="sans-serif-medium"
                        android:hint="Search by name, number or tag..."
                        android:imeOptions="actionSearch"
                        android:maxLines="1"
                        android:paddingStart="48dp"
                        android:paddingEnd="48dp"
                        android:textColor="#1E293B"
                        android:textColorHint="#94A3B8"
                        android:textSize="14sp" />

                    <!-- Filter Button -->
                    <ImageView
                        android:id="@+id/filterButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/filter_button_background"
                        android:padding="4dp"
                        android:src="@drawable/ic_tune"
                        app:tint="#94A3B8" />
                </RelativeLayout>

                <!-- Filter Chips Horizontal ScrollView -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingBottom="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- All Leads Chip -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/primary_chip_background"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Leads"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:background="#55B0F1"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:text="42"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <!-- Priority Chip -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/secondary_chip_background"
                            android:fontFamily="sans-serif-medium"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:text="Priority"
                            android:textColor="#64748B"
                            android:textSize="14sp" />

                        <!-- Newest Chip -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/secondary_chip_background"
                            android:fontFamily="sans-serif-medium"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:text="Newest"
                            android:textColor="#64748B"
                            android:textSize="14sp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Content Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingBottom="100dp">

                <!-- Today's Queue Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.05"
                        android:text="TODAY'S QUEUE"
                        android:textAllCaps="true"
                        android:textColor="#64748B"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textColor="#2B9DEE"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- Lead Cards Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_spacing"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <!-- Lead Card 1 - Sarah Jenkins -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/lead_card_background"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Top Section with Status Bar -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp">

                            <!-- Amber Status Bar -->
                            <View
                                android:id="@+id/statusBar1"
                                android:layout_width="6dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/amber_gradient" />

                            <!-- Lead Info -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/statusBar1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <!-- Avatar -->
                                <TextView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/amber_avatar_background"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center"
                                    android:text="SJ"
                                    android:textColor="#92400E"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <!-- Text Info -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif"
                                        android:text="Sarah Jenkins"
                                        android:textColor="#1E293B"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="14dp"
                                            android:layout_height="14dp"
                                            android:layout_marginEnd="4dp"
                                            android:src="@drawable/ic_real_estate"
                                            app:tint="#64748B" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="sans-serif-medium"
                                            android:text="Real Estate • California"
                                            android:textColor="#64748B"
                                            android:textSize="12sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Time Tag -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/green_tag_background"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="4dp"
                                    android:text="Just Now"
                                    android:textColor="#065F46"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <!-- Action Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:orientation="horizontal">

                            <!-- Call Lead Button -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/primary_button_background"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_call"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Call Lead"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- View Button -->
                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/secondary_button_background"
                                android:src="@drawable/ic_visibility"
                                app:tint="#64748B" />

                            <!-- More Button -->
                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/secondary_button_background"
                                android:src="@drawable/ic_more_vert"
                                app:tint="#64748B" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Lead Card 2 - Michael Ross -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/lead_card_background"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Top Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="16dp">

                            <!-- Avatar -->
                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/blue_avatar_background"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="MR"
                                android:textColor="#1E40AF"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- Text Info -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="Michael Ross"
                                    android:textColor="#1E293B"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/ic_policy"
                                        app:tint="#64748B" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Insurance • 15m ago"
                                        android:textColor="#64748B"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- New Tag -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blue_tag_background"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="New"
                                android:textColor="#1D4ED8"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <!-- Action Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Call Button -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/primary_button_background"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_call"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Call"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- View Details Button -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_weight="1"
                                android:background="@drawable/secondary_button_outline"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Details"
                                    android:textColor="#475569"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Lead Card 3 - Jessica Liu -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/lead_card_background"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Top Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="16dp">

                            <!-- Image Avatar -->
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/image_avatar_background"
                                android:scaleType="centerCrop"
                                android:src="@drawable/avatar_sarah" />

                            <!-- Text Info -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="Jessica Liu"
                                    android:textColor="#1E293B"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/ic_devices"
                                        app:tint="#64748B" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="Tech Inquiry • 1h ago"
                                        android:textColor="#64748B"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Callback Tag -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/purple_tag_background"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="Callback"
                                android:textColor="#7C3AED"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <!-- Action Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Call Button -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/primary_button_background"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_call"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Call"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- View Details Button -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_weight="1"
                                android:background="@drawable/secondary_button_outline"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Details"
                                    android:textColor="#475569"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Lead Card 4 - David Miller -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:alpha="0.9"
                        android:background="@drawable/lead_card_background"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Top Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="16dp">

                            <!-- Avatar -->
                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/emerald_avatar_background"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="DM"
                                android:textColor="#047857"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!-- Text Info -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="David Miller"
                                    android:textColor="#1E293B"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/ic_location"
                                        app:tint="#64748B" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="sans-serif-medium"
                                        android:text="New York • Finance"
                                        android:textColor="#64748B"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Time Tag -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gray_tag_background"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp"
                                android:text="2h ago"
                                android:textColor="#4B5563"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <!-- Action Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Call Button -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/primary_button_background"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_call"
                                    app:tint="#FFFFFF" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Call"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- View Details Button -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_weight="1"
                                android:background="@drawable/secondary_button_outline"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Details"
                                    android:textColor="#475569"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
