<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F8">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F6F7F8"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contacted Leads"
                android:textColor="#111518"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.015" />

            <!-- Filter Button -->
            <ImageView
                android:id="@+id/filterButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_filter_list"
                android:background="@drawable/icon_button_background"
                android:padding="8dp"
                app:tint="#111518" />
        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:elevation="1dp"
            android:outlineProvider="background"
            android:clipToOutline="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="12dp"
                app:tint="#617989" />

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search name or phone number"
                android:textColor="#111518"
                android:textColorHint="#617989"
                android:textSize="16sp"
                android:background="@null"
                android:padding="0dp"
                android:fontFamily="sans-serif"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- All Chip -->
                <TextView
                    android:id="@+id/allChip"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="All"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@drawable/primary_chip_background"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="12dp" />

                <!-- Interested Chip -->
                <TextView
                    android:id="@+id/interestedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Interested"
                    android:textColor="#111518"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@drawable/secondary_chip_background"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="12dp" />

                <!-- Callback Chip -->
                <TextView
                    android:id="@+id/callbackChip"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Callback"
                    android:textColor="#111518"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@drawable/secondary_chip_background"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="12dp" />

                <!-- Rejected Chip -->
                <TextView
                    android:id="@+id/rejectedChip"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Rejected"
                    android:textColor="#111518"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@drawable/secondary_chip_background"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="12dp" />

                <!-- No Answer Chip -->
                <TextView
                    android:id="@+id/noAnswerChip"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="No Answer"
                    android:textColor="#111518"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:background="@drawable/secondary_chip_background"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Content ScrollView -->
    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/fabAdd"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Lead Card 1 - Sarah Jenkins -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <!-- Profile Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Profile Image with Status -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp">

                        <!-- Profile Image -->
                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/avatar_sarah"
                            android:scaleType="centerCrop"
                            android:background="#E2E8F0"
                            android:clipToOutline="true" />

                        <!-- Online Status Indicator -->
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/online_status_background"
                            android:gravity="center"
                            android:layout_alignBottom="@id/profileImage"
                            android:layout_alignEnd="@id/profileImage"
                            android:layout_marginBottom="-4dp"
                            android:layout_marginEnd="-4dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_check"
                                app:tint="@android:color/white" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Profile Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Name and Status Tag -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sarah Jenkins"
                                android:textColor="#111518"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <!-- Interested Tag -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Interested"
                                android:textColor="#2B9DEE"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:background="@drawable/interested_tag_background"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />
                        </LinearLayout>

                        <!-- Phone Number -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 (555) 012-3456"
                            android:textColor="#2B9DEE"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Call History Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F1F5F9"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <!-- Time and Duration -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_history"
                            android:layout_marginEnd="4dp"
                            app:tint="#617989" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h ago • 4m 32s duration"
                            android:textColor="#617989"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- Notes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Requested a product demo for next Tuesday. Specifically interested in the enterprise tier features."
                        android:textColor="#111518"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Schedule Button -->
                    <LinearLayout
                        android:id="@+id/scheduleButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/primary_button_background"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="8dp"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Schedule"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Update Button -->
                    <LinearLayout
                        android:id="@+id/updateButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/secondary_button_background"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_edit_note"
                            android:layout_marginEnd="8dp"
                            app:tint="#111518" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update"
                            android:textColor="#111518"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Lead Card 2 - Michael Scott -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <!-- Profile Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Profile Image -->
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/avatar_michael"
                        android:scaleType="centerCrop"
                        android:background="#E2E8F0"
                        android:layout_marginEnd="16dp"
                        android:clipToOutline="true" />

                    <!-- Profile Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Name and Status Tag -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Michael Scott"
                                android:textColor="#111518"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <!-- Callback Tag -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Callback"
                                android:textColor="#EA580C"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:background="@drawable/callback_tag_background"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />
                        </LinearLayout>

                        <!-- Phone Number -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 (555) 987-6543"
                            android:textColor="#2B9DEE"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Call History Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F1F5F9"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <!-- Time and Duration -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_history"
                            android:layout_marginEnd="4dp"
                            app:tint="#617989" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yesterday • 1m 12s duration"
                            android:textColor="#617989"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- Notes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Busy at the moment, asked to call back tomorrow after 2 PM."
                        android:textColor="#111518"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Call Now Button -->
                    <LinearLayout
                        android:id="@+id/callNowButton"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/primary_button_background"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_call"
                            android:layout_marginEnd="8dp"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call Now"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- More Options Button -->
                    <ImageView
                        android:id="@+id/moreOptionsButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_more_horiz"
                        android:background="@drawable/secondary_button_background"
                        android:padding="8dp"
                        app:tint="#111518" />
                </LinearLayout>
            </LinearLayout>

            <!-- Lead Card 3 - David Wallace -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.9">

                <!-- Profile Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Profile Placeholder -->
                    <LinearLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="#E2E8F0"
                        android:gravity="center"
                        android:layout_marginEnd="16dp"
                        android:clipToOutline="true">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_person_add"
                            app:tint="#9CA3AF" />
                    </LinearLayout>

                    <!-- Profile Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Name and Status Tag -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="David Wallace"
                                android:textColor="#111518"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <!-- No Answer Tag -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Answer"
                                android:textColor="#6B7280"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:background="@drawable/no_answer_tag_background"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />
                        </LinearLayout>

                        <!-- Phone Number -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 (555) 246-8101"
                            android:textColor="#2B9DEE"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Call History -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Time and Duration -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_history"
                            android:layout_marginEnd="4dp"
                            app:tint="#617989" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oct 24 • 0s duration"
                            android:textColor="#617989"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- Notes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Left voicemail regarding Q3 updates."
                        android:textColor="#617989"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>

                <!-- Action Button -->
                <LinearLayout
                    android:id="@+id/tryAgainButton"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:background="@drawable/secondary_button_background"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_redo"
                        android:layout_marginEnd="8dp"
                        app:tint="#111518" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try Again"
                        android:textColor="#111518"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Lead Card 4 - Jan Levinson -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp">

                <!-- Profile Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Profile Image -->
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/avatar_sarah"
                        android:scaleType="centerCrop"
                        android:background="#E2E8F0"
                        android:layout_marginEnd="16dp"
                        android:clipToOutline="true" />

                    <!-- Profile Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Name and Status Tag -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Jan Levinson"
                                android:textColor="#111518"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <!-- Rejected Tag -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rejected"
                                android:textColor="#DC2626"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:background="@drawable/rejected_tag_background"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />
                        </LinearLayout>

                        <!-- Phone Number -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+1 (555) 777-9999"
                            android:textColor="#2B9DEE"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Call History -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Time and Duration -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_history"
                            android:layout_marginEnd="4dp"
                            app:tint="#617989" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oct 23 • 2m 15s duration"
                            android:textColor="#617989"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <!-- Notes -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not interested in new vendors at this time, asked to be removed from list."
                        android:textColor="#617989"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>

                <!-- Action Button -->
                <LinearLayout
                    android:id="@+id/archiveButton"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:background="@drawable/reject_button_background"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_block"
                        android:layout_marginEnd="8dp"
                        app:tint="#DC2626" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Archive Lead"
                        android:textColor="#DC2626"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <ImageView
        android:id="@+id/fabAdd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_add"
        android:background="@drawable/fab_background"
        android:padding="14dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintMarginBottom="16dp"
        app:tint="@android:color/white" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="8dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>