<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/text_primary" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lead Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:typeface="sans"/>

            <!-- Edit Button -->
            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/primary" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="140dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:background="@android:color/white">

                <!-- Profile Image Container -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/leads_image"
                        android:scaleType="centerCrop"
                        app:civ_border_width="4dp"
                        app:civ_border_color="@color/primary_light"/>

                    <!-- Online Status -->
                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/bg_online_status"
                        android:layout_gravity="bottom|end"/>
                </FrameLayout>

                <!-- Name -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"
                    android:typeface="sans"/>

                <!-- Phone -->
                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1 (555) 123-4567"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp"
                    android:typeface="sans"/>

                <!-- Tags -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q3 Sales"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_tag_blue"
                        android:textColor="@color/blue_700"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interested"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/bg_tag_green"
                        android:textColor="@color/green_700"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:background="@android:color/white">

                <!-- Call Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_action_button_primary"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_call"
                        android:background="@drawable/bg_circle_primary"
                        android:padding="8dp"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- WhatsApp Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_action_button_whatsapp"
                    android:layout_marginHorizontal="8dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_whatsapp"
                            android:background="@drawable/bg_circle_whatsapp"
                            android:padding="8dp"
                            app:tint="@android:color/white" />

                        <!-- Online dot -->
                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_green_dot"
                            android:layout_gravity="top|end"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WhatsApp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- SMS Button -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_action_button_sms"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_sms"
                        android:background="@drawable/bg_circle_sms"
                        android:padding="8dp"
                        app:tint="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SMS"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/divider"/>

            <!-- Activity History -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Activity History"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tvViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:padding="4dp"/>
                </LinearLayout>

                <!-- Timeline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <!-- Timeline Item 1 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">

                        <!-- Timeline line -->
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/timeline_line"
                            android:layout_marginStart="12dp"/>

                        <!-- Timeline dot -->
                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@drawable/bg_timeline_dot_primary"
                            android:layout_marginStart="6dp"/>

                        <!-- Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="32dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_call"
                                    android:layout_marginEnd="8dp"
                                    app:tint="@color/primary" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Outgoing Call"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10:00 AM"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Spoke with John about the Q3 pricing. He seemed interested but needs approval from his manager. Duration: 2m 30s."
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:lineSpacingExtra="4dp"
                                android:padding="12dp"
                                android:background="@drawable/bg_note"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Timeline Item 2 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/timeline_line"
                            android:layout_marginStart="12dp"/>

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@drawable/bg_timeline_dot_amber"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="32dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_note"
                                    android:layout_marginEnd="8dp"
                                    app:tint="@color/amber_500" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Note Added"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yesterday"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Customer asked for the updated product catalog PDF."
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:lineSpacingExtra="4dp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Add more timeline items similarly -->

                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/divider"/>

            <!-- Schedule Follow-up -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@drawable/bg_circle_primary_light"
                                android:gravity="center"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="@color/primary" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Schedule Follow-up"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"/>
                        </LinearLayout>

                        <!-- Date and Time -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DATE"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginBottom="4dp"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="Select date"
                                    android:background="@drawable/bg_edittext"
                                    android:paddingHorizontal="12dp"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TIME"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginBottom="4dp"/>

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="Select time"
                                    android:background="@drawable/bg_edittext"
                                    android:paddingHorizontal="12dp"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Notes -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="REMINDER NOTES"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="4dp"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:hint="E.g. Call about contract details..."
                                android:background="@drawable/bg_edittext"
                                android:padding="12dp"
                                android:textSize="14sp"
                                android:gravity="top"
                                android:inputType="textMultiLine"
                                android:maxLines="3"/>
                        </LinearLayout>

                        <!-- Set Reminder Button -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@color/gray_50">

                            <Button
                                android:id="@+id/btnSetReminder"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:text="Set Reminder"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:background="@drawable/bg_primary_button"
                                android:drawableStart="@drawable/ic_notification"
                                android:drawablePadding="8dp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Input Bar -->
    <LinearLayout
        android:id="@+id/bottomInputBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:layout_marginBottom="72dp"
        android:gravity="center_vertical"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etQuickNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add a quick note..."
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:background="@null"
            android:maxLines="1"/>

        <ImageButton
            android:id="@+id/btnSendNote"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_send"
            android:background="@drawable/bg_circle_primary"
            android:padding="8dp"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>